<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="0">

    <shape
        android:shape="ring"
        android:innerRadiusRatio="3"
    android:thicknessRatio="30"
    android:useLevel="false"> <!-- Disable level-based animation -->

    <!-- Set the size (width and height) of the progress bar -->
    <size
        android:width="4dp"
        android:height="4dp" />

    <!-- Define a gradient for the progress bar -->
    <gradient
        android:startColor="#ff33b5e5"
        android:centerColor="#ff99cc00"
        android:endColor="#ffff4444"
    android:angle="0"
    android:type="sweep" /> <!-- Type of gradient: sweep for a smooth transition -->

</shape>
</rotate>
